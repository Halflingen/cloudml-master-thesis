{
    "HW::Instance": {
        "ImageId": {
            "type": "String",
            "required": "Yes",
            "notes": "Provides the unique ID of the virtual Image."
        }, "InstanceType": {
            "type": "String",
            "required": "No",
            "notes": "Size of the instance, small, medium, large"
        }, "KernelId": {
            "type": "String",
            "required": "No",
            "notes": "ID for kernel that will be used"
        }, "KeyName": {
            "type": "String",
            "required": "No",
            "notes": "SSH-key"
        }, "Monitoring": {
            "type": "String",
            "required": "No",
            "notes": "Whether monitoring is enabled for the instance."
        }, "PlacementGroupName": {
            "type": "String",
            "required": "No",
            "notes": "The name of an existing placement group you want to launch the intstance into (for cluster instances)."
        }, "PrivateIpAddress": {
            "type": "String",
            "required": "No",
            "notes": "IP for Private cloud."
        }, "Volumes": {
            "type": "List of EC2 MountPoint types",
            "required": "No",
            "notes": "Volumes to be automatically mounted."
        }
    }
}
